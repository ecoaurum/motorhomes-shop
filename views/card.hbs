<h1>Корзина</h1>
<div id="card">
{{!-- Для начала проверяем есть что нибудь в корзине --}}
{{#if motorHomes.length}} 
    <table>
        <thead>
            <tr>
                {{!-- Устанавливаем три столбика --}}
                <th>Название</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            {{!-- Интегрируем массив курсов --}}
            {{#each motorHomes}}
            <tr>
                {{!-- Получаем поля из массива --}}
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id="{{id}}">Удалить</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{!-- Выводим цену --}}
    <p><strong>Цена:</strong> <span class="price">{{price}}</span></p>
    {{!-- Кнопка "Сделать заказ" --}}
    <form action="/orders" method="post">
        <button type="submit" class="btn">Сделать заказ</button>
    </form>
{{else}}
    <p>Корзина пуста</p>
{{/if}}
</div>